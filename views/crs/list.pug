extends ../layout

block content
    .row
        .col-sm-8
            h1(class="heading") List Of Courses
                
    table.table
        thead
            a(href="/courses/add", class="btn btn-warning float right  ") Add Course
                tr
                    th(style="text-align:center") Course Name
                    th(style="text-align:center") Course ID
                    th(style="text-align:center") Course Duration
                    th(style="text-align:center") Course Fee
                    th(style="text-align:center") Action
            tbody
                each course in courses
                    tr
                        td(style="text-align:center")=course.name
                        td(style="text-align:center")=course.id
                        td(style="text-align:center")=course.duration
                        td(style="text-align:center")=course.fee
                        td(style="text-align:center")
                            a(href="/courses/delete/"+course._id, class="btn btn-light btn-sm") Delete 
                            a(href="/courses/edit/"+course._id, class="btn btn-light btn-edit btn-sm") Edit